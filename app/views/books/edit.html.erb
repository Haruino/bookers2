<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "book_title" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: "book_opinion" %>
        </div>
        <div class="form-grou">
        <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
      <% end %>
      
      <%= link_to "Show", book_path(@book.id), class:"show_#{@book.id}" %>
      |
      <%= link_to "Back", "/books", class:"back" %>
    </div>
  </div>
</div>